#!/usr/bin/env bash

# Clean the environment
module purge
set -x

export WORKDIR=/scratch/$USER/$SLURM_JOBID 
mkdir -p $WORKDIR

# Set working directory to home directory
cd $WORKDIR

#
# Launch Xfce Window Manager and Panel
#

